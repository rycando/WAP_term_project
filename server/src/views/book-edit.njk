{% extends "layout.njk" %}
{% set title = "책 수정 - 캠퍼스북" %}

{% block content %}
<div class="container stack">
  <div class="section-heading">
    <div>
      <h2>판매 글 수정</h2>
      <p>필요한 필드를 수정 후 저장하세요.</p>
    </div>
  </div>

  <form class="card stack" id="book-form" data-book-id="{{ params.id }}" enctype="multipart/form-data">
    <div class="form-grid">
      <input name="isbn" placeholder="ISBN" />
      <input name="title" placeholder="제목" />
      <input name="author" placeholder="저자" />
      <input name="publisher" placeholder="출판사" />
      <input name="publishedAt" placeholder="출판일" />
      <select name="condition">
        <option value="S">S · 새 책 수준</option>
        <option value="A">A · 사용감 적음</option>
        <option value="B">B · 보통</option>
        <option value="C">C · 사용감 많음</option>
      </select>
      <input name="listPrice" placeholder="정가" />
      <input name="price" placeholder="판매가" />
      <select name="status">
        <option value="ON">ON · 판매중</option>
        <option value="SOLD">SOLD · 판매완료</option>
        <option value="DELETED">DELETED · 비활성</option>
      </select>
    </div>

    <textarea name="description" placeholder="책에 대한 설명을 추가하세요"></textarea>
    <input type="file" name="images" id="images" multiple />
    <button type="submit" id="submit-book">수정하기</button>
  </form>
</div>
{% endblock %}

{% block scripts %}
<script src="/static/js/book-form.js"></script>
{% endblock %}
